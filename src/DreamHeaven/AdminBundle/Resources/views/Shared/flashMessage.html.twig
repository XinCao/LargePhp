{% block flash_message %}
{% if app.session %}
    {% set flashBag = app.session.getFlashBag() %}
    {% set flashes = flashBag.all() %}
    {% if flashes|length > 0 %}
      <div class="row-fluid alert-message">
          <div class="span12">
          {% for type, messages in flashes %}
              {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                  <button class="close" data-dismiss="alert">&times;</button>
                </div>
              {% endfor %}
          {% endfor %}
          </div>
      </div>
    {% endif %}
{% endif %}
{% endblock %}